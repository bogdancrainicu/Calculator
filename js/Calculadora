var elOperator, elNumbers, clicked, realValue, result, showResult;

var inputs = [];

function getTarget (e) {
       clicked = e.target.textContent;
       
        var realValue = parseFloat(clicked); //converts the clicked string to a number
        
        if (isNaN(realValue)) { //checks if  the element is  a number or not. If it is not a number, then it is maintained as a string  (operands)
            realValue = clicked; //operands still be stored in this variable!
        }
    inputs.push(realValue);
    
    $('#result').val(inputs) ;
    
    //result = document.getElementById("result");
    //result.textContent = inputs;
    //$('result').text(inputs);
}



   function operation (inputs) {
        switch (realValue) {
            case '+':
                 result = realValue +  realValue;
            break;
            case '-':
                 result = realValue - realValue;
                break;
            case '*':
                result = realValue * realValue;
                break;
            case '/':
                if (realValue !== 0){
                       result = realValue / realValue;
                } else
                return 0;
                break;
            //if () case when 0 is being devided? Should know if zero is the first or second number
        default :
            return  'Math time';
    }
}

//console.log(result);

clicked = document.getElementById('operands');
clicked.addEventListener('click', getTarget, false);

clicked = document.getElementById('numbers');
clicked.addEventListener('click', getTarget, false);

